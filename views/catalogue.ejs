<%- include('header'); -%>
    <div class="content" style = "background-color: rgb(236, 224, 197);">
        <h1 style = "font-family: 'Times New Roman'; color: rgb(79, 107, 21);">Selected articles</h1>
        <table id="catalogue">
            <thead>
                <tr style = "font-family: Georgia;
                color: #382f1ce1;
                font-size: 25px;">
                    <th> Name</th>
                    <th scope="col" >Reference</th>
                    <th scope="col" >Category</th>
                    <th scope="col" >Price</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr style = "font-family: 'Times New Roman';
                    color: #5802028c;
                    font-size: 18px;">
                        <th scope="row" >
                            <%= product.name %>
                        </th>
                        <td>
                            <a href="/api/article/<%= product.reference %>">
                                <%= product.reference %>
                            </a>
                        </td>
                        <td>
                            <%= product.category %>
                        </td>
                        <td>
                            <%= product.price %>AED
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <br>
    <%- include('footer'); -%>