<%- include('header'); -%>
    <div class="article" style = "background-color: rgb(236, 224, 197);">
        <h1 style = "font-family: 'Times New Roman'; color: rgb(79, 107, 21);">Selected article</h1>
        <table id="catalogue">
            <thead>
                <tr style = "font-family: Georgia;
                color: #382f1ce1;
                font-size: 25px;">
                    <th>Reference</th>
                    <th scope="col">Category</th>
                    <th scope="col">Name</th>
                    <th scope="col">Supplier</th>
                    <th scope="col">Price</th>
                    <th scope="col">VAT</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Critical_Stock</th>

                </tr>
            </thead>
            <tbody>
                <tr style = "font-family: 'Times New Roman';
                color: #5802028c;
                font-size: 18px;">
                    <th scope = "row" >
                        <%= products.reference %>
                    </th>
                    <td>
                        <%= products.category %>
                    </td>
                    <td>
                        <%= products.name %>
                    </td>
                    <td>
                        <%= products.supplier %>
                    </td>
                    <td>
                        <%= products.price %>
                    </td>
                    <td>
                        <%= products.vat %>
                    </td>
                    <td>
                        <%= products.stock %>
                    </td>
                    <td>
                        <%= products.critical_stock %>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <br>
    <%- include('footer'); -%>